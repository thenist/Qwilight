<Canvas
    x:Class="Qwilight.View.AvatarDrawingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="View"
    Margin="{Binding MarginValue, ElementName=View}"
    VerticalAlignment="Top"
    Loaded="OnLoaded">
    <Canvas.Background>
        <ImageBrush ImageSource="{Binding AvatarWwwValue.AvatarDrawing, ElementName=View}" />
    </Canvas.Background>
    <Image Canvas.Left="{Binding EdgeX, ElementName=View}" Canvas.Top="{Binding EdgeY, ElementName=View}" Style="{StaticResource StandardViewMargin0}" Source="{Binding AvatarWwwValue.AvatarEdge, ElementName=View}" Width="{Binding EdgeLength, ElementName=View}" Height="{Binding EdgeHeight, ElementName=View}" />
</Canvas>
