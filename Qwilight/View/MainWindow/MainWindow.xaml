<Window
    x:Class="Qwilight.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Qwilight.View"
    AllowDrop="True"
    Background="Black"
    Foreground="White"
    FontFamily="{Binding FontFamilyValue, Source={StaticResource Configure}}"
    FontSize="{StaticResource FontLevel0}"
    Drop="OnFileAs"
    Loaded="OnLoaded"
    PreviewKeyDown="OnEssentialInputLower"
    KeyDown="OnInputLower"
    MouseDown="OnPointLower"
    FocusVisualStyle="{x:Null}"
    InputMethod.IsInputMethodEnabled="False"
    RenderOptions.BitmapScalingMode="Fant">
    <Viewbox>
        <view:WPFView />
    </Viewbox>
</Window>