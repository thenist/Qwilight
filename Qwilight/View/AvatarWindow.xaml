                                    </Grid>
                                    <ProgressBar Grid.Row="1" Style="{StaticResource WaitingStatusView}" Visibility="{Binding IsLevelVSLoading, Converter={StaticResource VisibilityModifier}}" />
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                    <ProgressBar Style="{StaticResource WaitingStatusView}" Visibility="{Binding IsAvatarLoading, Converter={StaticResource VisibilityModifier}}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Grid>