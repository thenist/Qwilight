<StackPanel
    x:Class="Qwilight.View.AvatarNameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="View"
    Orientation="Horizontal">
    <TextBlock Style="{StaticResource StandardTextView}" Text="{Binding AvatarWwwValue.AvatarTitleValue.Title, ElementName=View}" Foreground="{Binding AvatarWwwValue.AvatarTitleValue.TitlePaint, ElementName=View}" FontSize="{Binding FontLength, ElementName=View}" />
    <TextBlock Style="{StaticResource StandardTextView}" Text="{Binding AvatarName, ElementName=View}" Foreground="{Binding TextPaint, ElementName=View}" FontWeight="{Binding HeavyText, ElementName=View}" FontSize="{Binding FontLength, ElementName=View}" />
</StackPanel>
